{% extends 'base.html.twig' %}

{% block title %}Liste de tous les articles{% endblock %}

{% block main %}
    <h1 class="mt-4">Articles</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Listes des Articles</li>
    </ol>
    <div class="row">
        {% for article in articles %}
            <div class="col">
                <div class="card" style="width: 18rem; margin-bottom: 20px;">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.titre }}</h5>
                        <p class="card-text">{{ article.texte }}</p>
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary" style="width: 100%;">Voir l'article</a>
                    </div>
                    <div class="card-footer text-muted">
                        {{ article.date|date('d/m/Y') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}