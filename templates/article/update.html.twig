{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Modifier l'article : {{ article.titre }}</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.Titre, 'Titre de votre article', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.Titre, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.Texte, 'Contenu de votre article', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.Texte, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-check mb-3">
                                {{ form_widget(form.Etat, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.Etat, 'Publier l\'article', {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
