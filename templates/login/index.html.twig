{% extends 'base.html.twig' %}

{% block title %}Login - SB Admin{% endblock %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Connexion</h3></div>
                    <div class="card-body">
                        <form method="post" action="{{ path('app_login') }}">
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputEmail" type="email" name="_username" value="{{ last_username }}" placeholder="name@example.com" />
                                <label for="inputEmail">Adresse mail</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputPassword" type="password" name="_password" placeholder="Password" />
                                <label for="inputPassword">Mot de passe</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <button type="submit" class="btn btn-primary">Connexion</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="{{ path('app_register') }}">Besoin d'un compte ? Cr√©er un compte !</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
